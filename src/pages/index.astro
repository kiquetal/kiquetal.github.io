---
import Layout from '../layouts/Layout.astro';
---

<Layout title="System Engineer Portfolio">
	<main>
		<section class="hero">
			<div class="hero-content">
				<h1><span class="text-gradient">System Engineer</span> <br/>& Cloud Architect</h1>
				<p class="career-description">
					Architecting scalable, secure, and high-performance solutions. 
					I bridge the gap between complex business requirements and robust technical implementations.
				</p>
				<div class="cta-container">
					<a href="#certifications" class="cta-link">View Credentials</a>
				</div>
			</div>
			<div class="hero-image">
				<img src="https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2072&auto=format&fit=crop" alt="Cloud Architecture Landscape" />
			</div>
		</section>

		<section id="certifications" class="certifications">
			<h2>Professional Certifications</h2>
			<div class="logo-row">
				<div class="logo-item">
					<img src="https://upload.wikimedia.org/wikipedia/commons/9/93/Amazon_Web_Services_Logo.svg" alt="AWS Solutions Architect Professional" />
					<span class="tooltip">AWS Solutions Architect Professional</span>
				</div>
				<div class="logo-item">
					<img src="https://upload.wikimedia.org/wikipedia/commons/3/39/Kubernetes_logo_without_workmark.svg" alt="CKAD" />
					<span class="tooltip">Certified Kubernetes Application Developer</span>
				</div>
				<div class="logo-item">
					<img src="https://upload.wikimedia.org/wikipedia/en/3/30/Java_programming_language_logo.svg" alt="Java OCP" />
					<span class="tooltip">Oracle Certified Professional: Java</span>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 4rem 2rem;
		width: 100%;
		max-width: 1200px;
		color: #e2e8f0;
		font-size: 18px;
		line-height: 1.8;
	}
	
	.hero {
		display: flex;
		flex-direction: column-reverse;
		gap: 4rem;
		margin-bottom: 8rem;
		align-items: center;
		min-height: 60vh;
		justify-content: center;
	}

	@media (min-width: 900px) {
		.hero {
			flex-direction: row;
			text-align: left;
		}
		.hero-content {
			flex: 1;
			padding-right: 2rem;
		}
		.hero-image {
			flex: 1;
		}
	}

	.hero-content h1 {
		font-size: 3.5rem;
		font-weight: 800;
		line-height: 1.1;
		margin-bottom: 1.5rem;
		letter-spacing: -0.02em;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.career-description {
		font-size: 1.25rem;
		color: #94a3b8;
		margin-bottom: 2.5rem;
		max-width: 600px;
	}

	.cta-link {
		display: inline-block;
		padding: 0.8rem 1.6rem;
		background: rgb(var(--accent));
		color: white;
		text-decoration: none;
		border-radius: 8px;
		font-weight: 600;
		transition: all 0.2s ease;
		box-shadow: 0 4px 14px 0 rgba(var(--accent), 0.39);
	}

	.cta-link:hover {
		background: rgb(var(--accent-dark));
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(var(--accent), 0.23);
	}

	.hero-image img {
		width: 100%;
		height: auto;
		border-radius: 24px;
		box-shadow: 0 20px 40px -10px rgba(0,0,0,0.5);
		transition: transform 0.5s ease;
	}

	.hero-image img:hover {
		transform: scale(1.02) rotate(1deg);
	}

	.certifications {
		padding: 4rem 0;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
	}

	.certifications h2 {
		text-align: center;
		font-size: 2rem;
		margin-bottom: 3rem;
		color: #f8fafc;
		font-weight: 600;
	}

	.logo-row {
		display: flex;
		justify-content: center;
		align-items: center;
		gap: 4rem;
		flex-wrap: wrap;
	}

	.logo-item {
		position: relative;
		width: 100px;
		height: 100px;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(255, 255, 255, 0.05);
		border-radius: 20px;
		padding: 1.5rem;
		transition: all 0.3s ease;
		cursor: pointer;
	}

	.logo-item:hover {
		background: rgba(255, 255, 255, 0.1);
		transform: translateY(-5px);
	}

	.logo-item img {
		width: 100%;
		height: 100%;
		object-fit: contain;
		filter: grayscale(100%) brightness(200%);
		transition: filter 0.3s ease;
	}

	.logo-item:hover img {
		filter: grayscale(0%) brightness(100%);
	}

	.tooltip {
		position: absolute;
		bottom: -40px;
		left: 50%;
		transform: translateX(-50%);
		background: rgba(0, 0, 0, 0.9);
		color: white;
		padding: 0.5rem 1rem;
		border-radius: 6px;
		font-size: 0.875rem;
		white-space: nowrap;
		opacity: 0;
		visibility: hidden;
		transition: all 0.2s ease;
		pointer-events: none;
	}

	.logo-item:hover .tooltip {
		opacity: 1;
		visibility: visible;
		bottom: -50px;
	}
</style>
