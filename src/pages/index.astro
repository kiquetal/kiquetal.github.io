<script define:vars={{ translations, demos }}>
	const btnEn = document.getElementById('lang-en');
	const btnEs = document.getElementById('lang-es');

	function setLanguage(lang) {
		const t = translations[lang];

		// Update text content
		document.getElementById('role-text').textContent = t.role;
		document.getElementById('role-suffix-text').textContent = t.roleSuffix;
		document.getElementById('description-text').textContent = t.description;
		document.getElementById('cta-text').textContent = t.cta;
		document.getElementById('contact-text').textContent = t.contact;

		const latestUpdateLabel = document.getElementById('latest-update-label');
		if (latestUpdateLabel) latestUpdateLabel.textContent = t.latestUpdate;

		const latestPostTitle = document.getElementById('latest-post-title');
		if (latestPostTitle) {
			latestPostTitle.textContent = lang === 'en' ? latestPostTitle.dataset.titleEn : latestPostTitle.dataset.titleEs;
		}

		document.getElementById('demos-title-text').textContent = t.demosTitle;

		// Dynamic update for demos
		demos.forEach(demo => {
			document.getElementById(`${demo.id}-title-text`).textContent = t[`${demo.id}Title`];
			document.getElementById(`${demo.id}-desc-text`).textContent = t[`${demo.id}Desc`];
		});

		document.querySelectorAll('.demo-label').forEach(el => el.textContent = t.demoLabel);
		document.querySelectorAll('.blog-label').forEach(el => el.textContent = t.blogLabel);

		document.getElementById('cert-title-text').textContent = t.certificationsTitle;
		document.getElementById('view-profile-text').textContent = t.viewProfile;
		document.getElementById('cert1-text').textContent = t.cert1;
		document.getElementById('cert2-text').textContent = t.cert2;
		document.getElementById('cert3-text').textContent = t.cert3;

		// Update active state
		if (lang === 'en') {
			btnEn.classList.add('active');
			btnEs.classList.remove('active');
		} else {
			btnEs.classList.add('active');
			btnEn.classList.remove('active');
		}
		localStorage.setItem('preferred-lang', lang);
	}

	btnEn.addEventListener('click', () => setLanguage('en'));
	btnEs.addEventListener('click', () => setLanguage('es'));

	// Check for saved preference
	const savedLang = localStorage.getItem('preferred-lang');
	if (savedLang) {
		setLanguage(savedLang);
	}
</script>

